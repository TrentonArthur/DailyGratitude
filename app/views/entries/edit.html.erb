<% if @entry.errors.any? %>
  <% @entry.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Entry #<%= @entry.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_entry/<%= @entry.id %>" class="form-horizontal">
      <!-- Label and input for text -->
      <div class="form-group">
        <label for="text" class="col-sm-2 control-label">
          Text
        </label>
        <div class="col-sm-10">
          <textarea id="text" name="text" placeholder="Text" class="form-control" rows="3"><%= @entry.text %></textarea>
        </div>
      </div>

      <!-- Label and input for owner_id -->
      <div class="form-group">
        <label for="owner_id" class="col-sm-2 control-label">
          Owner
        </label>
        <div class="col-sm-10">
          <input type="text" id="owner_id" name="owner_id" placeholder="Owner" class="form-control" value="<%= @entry.owner_id %>">
        </div>
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="col-sm-2 control-label">
          Image
        </label>
        <div class="col-sm-10">
          <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @entry.image %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Entry" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

