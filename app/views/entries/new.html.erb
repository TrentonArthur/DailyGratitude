<% if @entry.errors.any? %>
  <% @entry.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>



<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">What happened today?</h3>
      </div>
      <div class="panel-body">
        <form action="/create_entry" class="form-horizontal">
          <!-- Label and input for text -->
          <div class="form-group">
            <label for="text" class="col-sm-2 control-label">
              Text
            </label>
            <div class="col-sm-10">
              <textarea id="text" name="text" placeholder="Text" class="form-control" rows="3"><%= @entry.text %></textarea>
            </div>
          </div>


            <input type="hidden" name ="share_owner" value="<%= current_user.id %>">


          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">
              Image
            </label>
            <div class="col-sm-10">
              <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @entry.image %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Add Entry" class="btn btn-primary">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
