<% if @share.errors.any? %>
  <% @share.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Share</h1>
</div>


<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Share</h3>
      </div>
      <div class="panel-body">
        <form action="/create_share" class="form-horizontal">
          <!-- Label and input for share_owner -->
          <div class="form-group">
            <label for="share_owner" class="col-sm-2 control-label">
              Share owner
            </label>
            <div class="col-sm-10">
              <%= select_tag(:share_owner, options_from_collection_for_select(User.all, :id, :firstname), :class => "form-control") %>

            </div>
          </div>

          <!-- Label and input for share_with -->
          <div class="form-group">
            <label for="share_with" class="col-sm-2 control-label">
              Share with
            </label>
            <div class="col-sm-10">
              <%= select_tag(:share_with, options_from_collection_for_select(User.all, :id, :firstname), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for entry_id -->
          <div class="form-group">
            <label for="entry_id" class="col-sm-2 control-label">
              Entry
            </label>
            <div class="col-sm-10">
              <%= select_tag(:entry_id, options_from_collection_for_select(Entry.all, :id, :id), :class => "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Share" class="btn btn-primary">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
